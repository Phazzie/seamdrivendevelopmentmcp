{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*", "contracts/**/*", "tests/**/*", "scripts/**/*"],
  "exclude": ["probes"]
}